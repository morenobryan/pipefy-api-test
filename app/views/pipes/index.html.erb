<p id="notice"><%= notice %></p>

<h1>Pipes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Token</th>
      <th>Can edit</th>
      <th>Organization</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pipes.each do |pipe| %>
      <tr>
        <td><%= pipe.name %></td>
        <td><%= pipe.token %></td>
        <td><%= pipe.can_edit %></td>
        <td><%= pipe.organization %></td>
        <td><%= link_to 'Show', pipe %></td>
        <td><%= link_to 'Edit', edit_pipe_path(pipe) %></td>
        <td><%= link_to 'Destroy', pipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pipe', new_pipe_path %>
