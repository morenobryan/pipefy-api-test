<p id="notice"><%= notice %></p>

<h1>Cards</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Current phase</th>
      <th>Due date</th>
      <th>Duration</th>
      <th>Started at</th>
      <th>Finished at</th>
      <th>Expiration time</th>
      <th>Index</th>
      <th>Token</th>
      <th>Expired</th>
      <th>Late</th>
      <th>Draft</th>
      <th>Done</th>
      <th>Can show pipe</th>
      <th>Previous phase</th>
      <th>Next phase</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cards.each do |card| %>
      <tr>
        <td><%= card.title %></td>
        <td><%= card.current_phase_id %></td>
        <td><%= card.due_date %></td>
        <td><%= card.duration %></td>
        <td><%= card.started_at %></td>
        <td><%= card.finished_at %></td>
        <td><%= card.expiration_time %></td>
        <td><%= card.index %></td>
        <td><%= card.token %></td>
        <td><%= card.expired %></td>
        <td><%= card.late %></td>
        <td><%= card.draft %></td>
        <td><%= card.done %></td>
        <td><%= card.can_show_pipe %></td>
        <td><%= card.previous_phase_id %></td>
        <td><%= card.next_phase_id %></td>
        <td><%= link_to 'Show', card %></td>
        <td><%= link_to 'Edit', edit_card_path(card) %></td>
        <td><%= link_to 'Destroy', card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Card', new_card_path %>
